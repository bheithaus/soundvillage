<div id="sign-in-modal" class="modal hide fade sign" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>Sign In</h3>
	  </div>
	<div class="modal-body">
		<input type="email" id="email" placeholder="email"><br>
		<input type="password" id="password" placeholder="password"><br>
		<label class="checkbox-label">Remember Me
			<input id="remember-me" name="user[remember_me]" type="checkbox" value="1" checked="true">
		</label><br><br>
		<button class="btn" id="commit-signin">Sign In</button>
		<div class="pull-right">
			<h4>new user?</h4>
			<a id="signup" class="btn">Sign Up Form</a>
		</div>
	</div>
</div>
<div id="sign-up-modal" class="modal hide fade sign" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>Please Sign Up with Username and Password</h3>
	  </div>
	<div class="modal-body">
		<input type="email" id="su-email" placeholder="email"><br>
		<input type="password" id="su-password" placeholder="password">
		<input type="password" id="su-password-confirm" placeholder="confirm password"><br>
		<button class="btn" id="commit-signup">Sign Up</button>
		<div class="pull-right">
			<h4>already Signed up?</h4>
			<a class="signin btn">Sign In</a>
		</div>
	</div>
</div>