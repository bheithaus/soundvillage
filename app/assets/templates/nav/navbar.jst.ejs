<div id="sign-in-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>Please Enter Username and Password</h3>
	  </div>
	<div class="modal-body">
		<input type="text" id="email" placeholder="email">
		<input type="password" id="password" placeholder="password">
		<input id="remember-me" name="user[remember_me]" type="checkbox" value="1">
		<button class="btn" id="commit-signin">Sign In</button>
		<h4>new user?</h4>
		<a id="signup">Sign Up Form</a>
	</div>
</div>
<div id="sign-up-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	    <h3>Please Sign Up with Username and Password</h3>
	  </div>
	<div class="modal-body">
		<input type="text" id="su-email" placeholder="email"><br>
		<input type="password" id="su-password" placeholder="password">
		<input type="password" id="su-password-confirm" placeholder="confirm password">
		<button class="btn" id="commit-signup">Sign Up</button>
		<h4>already Signed up?</h4>
		<a class="signin btn" id="">Sign In</a>
	</div>
</div>